#version 440

// Interpolated values from the vertex shaders

flat in vec3 color_gs;
in vec3 triDistance;

// Ouput data
out vec4 color;

void main(){

    float d1 = min(min(triDistance.x, triDistance.y), triDistance.z);
    if (d1 < 0.02) {
         color = vec4(0, 0, 0, 1);
    } else {
        color = vec4(color_gs, 1.0);
    }

}

